#!/usr/bin/zsh

DOTDIR="$(realpath $(dirname `realpath $0`)/..)"

if [[ "$1" == '--list' ]]; then
  cd "$DOTDIR/lib/colorschemes"
  ls
  exit 0;
fi


function __color {
  local id=$1
  local color=$2
  echo -ne '\eP\e]'$id';#'$color'\a'
}

function __colorscheme {
  local id=$1
  local color=$2
  echo -ne '\eP\e]4;'$id';#'$color'\a'
}

name=$1
source "$DOTDIR/lib/colorschemes/${name}"
